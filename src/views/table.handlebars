function setMaxThreshold(data){
  let max = 0
  data.forEach((e => {
    if(e.THRESHOLD > max){
      max = e.THRESHOLD
    } 
  }))

  data.forEach((e => {
    e.MAXTHRESHOLD = max
  }))

}

function loadGraficos(data, id){
  switch (id) {
    case 0:
    case 1:
    case 2:
    case 3:
    case 5:
    case 4:
      createDefaultColumnChart(data, id)
      break;
    default:
      console.log("No chart for that id")
  }
}

function createDefaultColumnChart(data, id){
